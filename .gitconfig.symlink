[user]
	email = jrhoads@datacite.org
	name = jrhoads
[core]
	autocrlf = input
	editor = vim
	excludesfile = /home/jrhoads/.gitignore_global
	pager = less -r
[http]
	postBuffer = 524288000
[color]
	ui = true
[alias]
	co = checkout
	br = branch
	s = status -s
	lg = log --oneline --abbrev-commit --decorate --all --graph --color
	praise = blame
	wd = diff --word-diff
	p = push
[push]
	default = simple
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[init]
	defaultBranch = main
